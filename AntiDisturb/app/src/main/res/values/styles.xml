<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabMenuStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/tab_menu_margin</item>
        <item name="android:paddingTop">@dimen/tab_menu_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/tab_menu_textsize</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@drawable/tab_menu_textcolor_selector</item>
        <item name="android:background">@drawable/tab_menu_bg_selector</item>
    </style>

    <style name="ActivityTitleSideText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ActivityTitleCenterText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="FragmentBottomOperateText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <dimen name="tab_menu_margin">7dip</dimen>
    <dimen name="tab_menu_textsize">28px</dimen>
</resources>
